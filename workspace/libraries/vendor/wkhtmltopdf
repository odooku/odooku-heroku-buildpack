#!/usr/bin/env bash
# Build Path: /app/.heroku/vendor/

OUT_PREFIX=$1


WKHTMLTOPDF_VERSION=0.12.1


echo "-----> Building wkhtmltopdf ${WKHTMLTOPDF_VERSION}"
curl -L http://download.gna.org/wkhtmltopdf/0.12/${WKHTMLTOPDF_VERSION}/wkhtmltox-${WKHTMLTOPDF_VERSION}_linux-trusty-amd64.deb > wkhtmltox.deb
dpkg -x wkhtmltox.deb .
cp -a ./usr/local/. ${OUT_PREFIX}
